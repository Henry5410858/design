<!DOCTYPE html>
<html lang="<%= locale || 'es' %>">
<head>
  <meta charset="utf-8" />
  <title>Propuesta Simple</title>
  <style>
    :root { --primary: <%= theme?.primary || '#1f2937' %>; --secondary: <%= theme?.secondary || '#6366f1' %>; --text: #111827; --muted: #6b7280; }
    body { margin: 0; font-family: 'Segoe UI', Arial, sans-serif; color: var(--text); max-height: 100vh; overflow: hidden; }
    .cover { height: 240px; background: linear-gradient(135deg, var(--primary), var(--secondary)); color: #fff; display: flex; align-items: center; padding: 36px 44px; position: relative; }
    .lupaprop-logo { position: absolute; top: 20px; right: 44px; }
    .logo { max-height: 64px; max-width: 220px; }
    .container { padding: 28px 44px; }
    .h2 { font-size: 20px; font-weight: 800; margin: 18px 0 8px; }
    .p { line-height: 1.5; }
    .gallery { display: grid; grid-template-columns: repeat(3, 1fr); gap: 12px; }
    .gallery img { width: 100%; height: 160px; object-fit: cover; border-radius: 8px; }
    .card { border: 1px solid #e5e7eb; border-radius: 8px; overflow: hidden; margin-top: 16px; }
    .card img { width: 100%; height: 220px; object-fit: cover; display: block; }
    .card-body { padding: 12px 14px; }
    .meta { font-size: 12px; color: var(--muted); }
    .price { color: #075985; font-weight: 800; }
  </style>
</head>
<body>
  <header class="cover">
    <% if (theme?.logoUrl) { %>
      <img class="logo" src="<%= theme.logoUrl %>" alt="Logo" />
    <% } %>
    <h1 style="margin-left:16px">Propuesta Comercial</h1>
    <!-- LupaProp logo in top right -->
    <div class="lupaprop-logo">
      <img src="/assets/lupaprop-logo.png" alt="LupaProp Logo" style="max-height: 50px; max-width: 150px; object-fit: contain;" />
    </div>
  </header>

  <main class="container">
    <% if (intro) { %>
      <section>
        <div class="h2">Introducción</div>
        <p class="p"><%= intro %></p>
      </section>
    <% } %>

    <% if ((items || []).length) { %>
      <section>
        <div class="h2">Selección de propiedades</div>
        <% (items || []).slice(0,6).forEach(function(it){ %>
          <article class="card">
            <% if (it._hero) { %>
              <img src="<%= it._hero %>" alt="<%= it.title || '' %>" />
            <% } %>
            <div class="card-body">
              <h3 style="margin: 0 0 6px 0"><%= it.title || '' %></h3>
              <div class="meta"><%= [it.location, currency(it.price, currencyCode)].filter(Boolean).join(' • ') %></div>
              <p class="p"><%= it.description || '' %></p>
              <% if (it.highlights && it.highlights.length) { %>
                <ul>
                  <% it.highlights.slice(0,5).forEach(function(h){ %>
                    <li><%= h %></li>
                  <% }) %>
                </ul>
              <% } %>
            </div>
          </article>
        <% }) %>
      </section>
    <% } %>

    <section style="margin-top: 20px; border-top: 1px solid #e5e7eb; padding-top: 12px; font-size: 12px; color: var(--muted);">
      <div><strong><%= client?.contact?.name || '' %></strong> · <%= [client?.contact?.email, client?.contact?.phone].filter(Boolean).join(' · ') %></div>
    </section>
  </main>
</body>
</html>